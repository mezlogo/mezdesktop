# Append "$1" to $PATH when not already in.
append_path () {
    case ":$PATH:" in
        *:"$1":*)
            ;;
        *)
            PATH="${PATH:+$PATH:}$1"
    esac
}

theprofiled="$HOME/.theprofile.d"
if test -d "$theprofiled"; then
	for profile in "${theprofiled}"/*.sh; do
		test -r "$profile" && source "$profile"
	done
	unset profile
fi

# Unload our profile API functions
unset -f append_path
